<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <life.lixiaoyu.flipped.uikit.cell.FlippedCellItemView
        android:background="#11ff0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flipped_start_icon="@drawable/ic_info"
        app:flipped_start_icon_tint_color="#FF0000"
        app:flipped_title="Hello"
        app:flipped_show_divider="false"
        />

    <life.lixiaoyu.flipped.uikit.cell.FlippedCellItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flipped_title="Hello"
        app:flipped_subtitle="This is a subtitle"
        app:flipped_title_color="#00FF00"
        app:flipped_subtitle_color="#0000FF"
        app:flipped_divider_color="#FF0000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>